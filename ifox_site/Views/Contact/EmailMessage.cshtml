@model ifox_site.Models.SendMailViewModel
@{
    ViewBag.Title = "EmailMessage";
}

<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width">
    <title></title>
    <style></style>
</head>

<body>
    <div id="email" style="width:600px;">

        <h1 style="text-align:center; font-family:arial,helvetica,sans-serif; color:steelblue">Contact Information</h1>


        <table style="font-family:arial,helvetica,sans-serif;"  role="presentation" border="0" cellspacing="10" >
            <tr>
                <td style="color:royalblue" width="10%"><b>Name : </b></td>
                <td >@Model.Name</td>
            </tr>

            <tr>
                <td style="color:royalblue"  width="10%"><b>Email :  </b></td>
                <td>@Model.Email</td>
            </tr>


            <tr>
                <td style="color:royalblue"  width="10%"><b>Contact :  </b></td>
                <td>@Model.Contact</td>
            </tr>


            <tr>
                <td style="color:royalblue"  width="10%"><b>Subject :  </b></td>
                <td>@Model.Subject</td>
            </tr>

            <tr>
                <td valign="top" style="color:royalblue"  width="10%"><b> Message:  </b></td>
                <td>@Model.Message</td>
            </tr>

        </table>

    </div>
</body>
